<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <link rel="shortcut icon" type="image/x-icon" href="../assets/img/favicon.ico">
    <title>VS Doc</title>
    <link rel="stylesheet" type="text/css" href="../css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="../css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="../css/select2.min.css">
    <link rel="stylesheet" type="text/css" href="../css/bootstrap-datetimepicker.min.css">
    <link rel="stylesheet" type="text/css" href="../css/style.css">
</head>

<body>

    <div class="main-wrapper  account-wrapper">
        <div class="account-page">
            <div class="account-center">
                {{#each userData}}
                <div class="account-box">
                    <form action="/adminUpdate/{{this.id}}" class="form-signin" method="POST">
                        <div class="account-logo">
                            <a href="#"><img src="./img/logo-dark.png" alt=""></a>
                        </div>

                         {{#each errors}}
                        <div class="alert alert-danger" id="alert" role="alert">
                             <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                            {{text}}
                        </div>
                        {{/each}}
                        <div class="form-group">
                            <label>Username</label>
                            <input type="text" class="form-control" name="username" value="{{this.username}}" required>
                        </div>
                        <div class="form-group">
                            <label>Email Address</label>
                            <input type="email" class="form-control" name="email" value="{{this.email}}" required>
                        </div>
                        <div class="form-group">
                            <label>Mobile Number</label>
                            <input type="text" class="form-control" name="phone" value="{{this.phone}}" required>
                        </div>
                       
                        <div class="form-group text-center">
                            <button class="btn btn-primary account-btn" type="submit">Update Admin</button>
                        </div>
                    </form>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
    <script src="js/jquery-3.2.1.min.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/app.js"></script>
</body>

