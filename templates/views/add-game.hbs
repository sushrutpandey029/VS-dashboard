{{>header}}
{{>sidebar}}
        <div class="page-wrapper">
            <div class="content">
                <div class="row">
                    <div class="col-lg-8 offset-lg-2">
                        <h4 class="page-title">Add Games</h4>
                    </div>
                </div>
                <div class="row"> 
                    <div class="col-lg-8 offset-lg-2">
                        <form action="/game_register" method="POST">
                            {{#each errors}}
                            <div class="alert alert-danger">
                              <a href="#" class ="close" data-dismiss="alert" aria-label="close">&times;</a>
                              {{text}}    
                            </div>
                            {{/each}}
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <!-- <input type="text" name ="nickName"class="form-control" id="floatingInput" placeholder=" nick Name "> -->
                                        <label>Game Categorie <span class="text-danger">*</span></label>
                                        <select class="form-control" type="text" name ="gamecategories" value="{{gamecategories}}" required>
                                            <option value="HASI">HASI</option>
                                            <option value="Phoentics">phoentics</option>
                                            <option value="Syllables">syllables</option>
                                            <option value="Words">words</option>
                                        </select>
                                        
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Game type <span class="text-danger">*</span></label>
                                        <input class="form-control" type="text" name ="gametype" value="{{gametype}}" required>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Game Name <span class="text-danger">*</span></label>
                                        <input class="form-control" type="text" name ="gamename" value="{{gamename}}" required>
                                    </div>
                                </div>
                                <div class="col-sm-6">
									<div class="form-group">
										<label>Game Image URL</label>
										<div class="profile-upload">
                                            <div>
                                                <input class="form-control" type="text" name="gameimage" value="{{gameimage}}">
                                            </div>
										</div>
									</div>
                                </div>
                
                            </div>

                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Game File <span class="text-danger">*</span></label>
                                    <input class="form-control" type="text" name ="gamefile" value="{{gamefile}}" required>
                                </div>
                            </div>

							<div class="form-group">
                                <label>Game Description</label>
                                <textarea class="form-control" rows="3" cols="30" name="gamedescription" value="gamedescription"></textarea>
                            </div>
                            <div class="m-t-20 text-center">
                                <button class="btn btn-primary account-btn" type="submit">Create Game</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
    
        </div>
    </div>
  {{>footer}}